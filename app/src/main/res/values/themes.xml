<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gecol" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"-->
        <item name="colorPrimary">@color/yellow_500</item>
        <item name="colorPrimaryVariant">@color/yellow_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyActionBar" parent="Theme.MaterialComponents">
        <item name="android:background">@color/yellow_700</item>
    </style>
</resources>